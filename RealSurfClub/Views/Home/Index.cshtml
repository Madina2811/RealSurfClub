@model RealSurfClub.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Клуб любителей серфинга";
}
<br>
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form>
        <div class="panel panel-info form-style">
            <div class=" panel-heading" style="background-color: #cee3e6">
                Авторизация
            </div>
            <div class=" panel-body">
                <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                    @Html.LabelFor(model => model.Nickname)
                    @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "Password" } })
                </div>

                <div class="form-group" style="font-family: Calibri; text-align:left; display:flex">
                    @Html.CheckBoxFor(model => model.RememberMe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.RememberMe)
                </div>

                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h3 class="text-danger">@ViewBag.Message</h3>
                </div>


                <button type="submit" class="btn button-style" style="width:100%">Войти</button>
            </div>
        </div>
    </form>
    <br>
<div style="text-align:center">
    Нет аккаунта?
    <a href="~/Register" type="button" class="btn button-style" style="margin-left: auto">Зарегистрироваться</a>
</div>
}